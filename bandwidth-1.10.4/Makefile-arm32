CFLAGS= -g -Wno-conditional-type-mismatch
CC=gcc -Wall -I.
SRC=main.c 
OBJ=main.o 
LIB= 
AS=nasm
ARM_AS=as
ARM_CC=gcc

bandwidth32: CPUCharacteristics.c Testing.c ${SRC} routines-arm-32bit.asm ARMOOC32
	${ARM_AS} -march=armv7a -mfpu=neon routines-arm-32bit.asm -o routines-arm-32bit.o
	${ARM_CC} ${CFLAGS} -c -I ./OOC Testing.c
	${ARM_CC} ${CFLAGS} -c -I ./OOC CPUCharacteristics.c
	${ARM_CC} routines-arm-32bit.o CPUCharacteristics.o Testing.o ${SRC} ${CFLAGS} ${OOCLIB32} -lm -o bandwidth32

include Makefile-OOC

